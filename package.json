{
  "name": "@exposition/monorepo",
  "version": "0.3.0",
  "private": true,
  "description": "Structure to explain the who, what and where of the API mocking process",
  "keywords": [
    "exposition",
    "mock",
    "tests"
  ],
  "license": "MIT",
  "author": "Andrej Schujkow <https://github.com/h2xd>",
  "main": "index.js",
  "scripts": {
    "build": "pnpm run --recursive --if-present --filter './packages/*' build",
    "lint": "eslint --ext=js,ts,tsx,vue,md,json .",
    "lint:fix": "eslint --ext=js,ts,tsx,vue,md,json . --fix",
    "test": "vitest run",
    "test:jest": "jest",
    "doc": "pnpm run --recursive --if-present docs:dev --base '/'",
    "playground": "pnpm run --recursive --if-present --filter './playground' dev",
    "ci:publish": "pnpm publish --recursive --filter './packages/core' --filter './packages/sdk' --filter './packages/integrations' --no-git-checks --access public",
    "test:publish": "pnpm publish --dry-run --recursive --filter './packages/core' --filter './packages/sdk' --filter './packages/integrations' --no-git-checks --access public"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@types/jest": "^28.1.6",
    "@types/node": "^17.0.40",
    "eslint": "^8.17.0",
    "happy-dom": "^5.0.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4",
    "vite": "^2.9.9",
    "vitest": "^0.9.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react",
        "react",
        "react-dom"
      ]
    }
  }
}
