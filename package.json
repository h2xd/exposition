{
  "name": "@exposition/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Structure to explain the who, what and where of the API mocking process",
  "keywords": [
    "exposition",
    "mock",
    "tests"
  ],
  "license": "MIT",
  "author": "Andrej Schujkow <https://github.com/h2xd>",
  "main": "index.js",
  "scripts": {
    "build": "pnpm run --recursive --if-present --filter './packages/*' build",
    "lint": "eslint --ext=js,ts,tsx,vue,md,json .",
    "lint:fix": "eslint --ext=js,ts,tsx,vue,md,json . --fix",
    "test": "vitest run",
    "doc": "pnpm run --recursive --if-present docs:dev",
    "playground": "pnpm run dev --recursive --filter playground",
    "ci:publish": "pnpm publish --recursive --filter './packages/core'"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.21.1",
    "@types/node": "^17.0.40",
    "eslint": "^8.17.0",
    "happy-dom": "^5.0.0",
    "typescript": "^4.7.3",
    "vite": "^2.9.9",
    "vitest": "^0.9.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react",
        "react",
        "react-dom"
      ]
    }
  }
}